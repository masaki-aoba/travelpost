<% if logged_in? %>
  <div class="cente jumbotron">
    <div class="text-center">
      <h1>観光地口コミ情報</h1>
    </div>
  </div>
  <div class="text-center">
    <%= render 'posts/posts', posts: @posts %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TravelShare</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      <%= link_to 'Login now!', login_path, class: 'btn btn-lg btn-success' %>
    </div>
  </div>
<% end %>

