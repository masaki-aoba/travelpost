<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
        <% if current_user == @user %>
          <%= link_to 'このUserの情報を編集する', edit_user_path(@user) %>
          <%= link_to '退会する', @user, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>
        <% end %>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="#" class="nav-link">Microposts</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Favorites</a></li>
    </ul>
  </div>
</div>